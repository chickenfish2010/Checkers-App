    <Page.BottomAppBar>
        <CommandBar>
            <AppBarButton x:ConnectionId='33' x:Name="NewGameButton" HorizontalAlignment="Left" Content="New Game"                             Icon="Refresh"/>
            <AppBarButton x:ConnectionId='34' x:Name="SettingsButton" HorizontalAlignment="Left" Content="Settings"                              Icon="Setting"/>
