            <Rectangle x:ConnectionId='2' x:Name="_10" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="70,70,420,420"                      />
            <Rectangle x:ConnectionId='3' x:Name="_21" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="140,140,350,350"                      />
            <Rectangle x:ConnectionId='4' x:Name="_31" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="210,210,280,280"                      />
            <Rectangle x:ConnectionId='5' x:Name="_42" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="280,280,210,210"                      />
            <Rectangle x:ConnectionId='6' x:Name="_52" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="350,350,140,140"                      />
            <Rectangle x:ConnectionId='7' x:Name="_63" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="420,420,70,70"                      />
            <Rectangle x:ConnectionId='8' x:Name="_73" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="490,490,0,0"                      />
            <Rectangle x:ConnectionId='9' x:Name="_01" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="140,0,350,490"                      />
            <Rectangle x:ConnectionId='10' x:Name="_11" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="210,70,280,420"                      />
            <Rectangle x:ConnectionId='11' x:Name="_02" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="280,0,210,490"                      />
            <Rectangle x:ConnectionId='12' x:Name="_22" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="280,140,210,350"                      />
            <Rectangle x:ConnectionId='13' x:Name="_12" Fill="Black" HorizontalAlignment="Center" Height="70" Stroke="Black" VerticalAlignment="Center" Width="70" Margin="350,70,140,420"                      />
